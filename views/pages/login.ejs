<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>KRRS Login</title>
  <link rel="stylesheet" href="../../assets/css/login-style.css">

</head>
<body>
<div class="login-page">
   <div class="logo-login">
    <img src="../../assets/images/Tarumanagara_University_logo.png" class="logo" width="250">
    </div>
    <div class="form">
      <form id="login" method="post" class="input-group" action="/api/auth/login">
				<input name="email" type="text" class="input-field" placeholder="Email" required>
				<input name="password" type="password" class="input-field" placeholder="Password" required>
				<button type="submit" class="submit-button">Log In</button>
			</form>
  </div>
</div>
<!-- partial -->
<script  src="../../assets/js/login-script.js"></script>

</body>
</html>
